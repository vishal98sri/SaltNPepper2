<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".signup">



    <ImageView
        android:id="@+id/imgtick"
        android:layout_width="37dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/txtnumb"
        android:layout_toEndOf="@+id/txtnumb"
        android:visibility="visible"
        app:srcCompat="@drawable/tick" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="46dp"
        android:layout_marginTop="24dp"
        android:text="SIGN UP"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView10"
        android:layout_below="@+id/textView8"
        android:text="Create an account with new phone number"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="108dp"
        android:text="10 digit mobile number"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>

    <EditText
        android:id="@+id/txtnumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView10"
        android:ems="10"
        android:inputType="phone" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/txtnumb"
        android:text="EMAIL ADDRESS"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>

    <EditText
        android:id="@+id/txtemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView11"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/txtemail"
        android:text="NAME"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>

    <EditText
        android:id="@+id/txtname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView12"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/txtname"
        android:text="PASSWORD"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>

    <EditText
        android:id="@+id/txtpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView13"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btnsign"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="78dp"
        android:background="@color/Orange"
        android:enabled="false"
        android:onClick="signing"
        android:text="ENTER EMAIL" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imgtick2"
        android:layout_width="37dp"
        android:layout_height="35dp"
        android:layout_below="@+id/textView11"
        android:layout_toEndOf="@+id/txtnumb"
        android:visibility="invisible"
        app:srcCompat="@drawable/tick" />

    <ImageView
        android:id="@+id/imgtick3"
        android:layout_width="37dp"
        android:layout_height="35dp"
        android:layout_below="@+id/textView12"
        android:layout_toEndOf="@+id/txtnumb"
        android:visibility="invisible"
        app:srcCompat="@drawable/tick" />

    <ImageView
        android:id="@+id/imgtick4"
        android:layout_width="37dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/imgtick"
        android:layout_below="@+id/textView13"
        android:visibility="invisible"
        app:srcCompat="@drawable/tick" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtname"
        android:layout_toEndOf="@+id/textView13"
        android:text="(Minimun of 8 characters)"
        android:textColor="@color/colorAccent"/>

</RelativeLayout>